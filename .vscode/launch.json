{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch TradeHorizon API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/TradeHorizon/TradeHorizon.API/bin/Debug/net8.0/TradeHorizon.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/TradeHorizon/TradeHorizon.API",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/TradeHorizon/TradeHorizon.API/Views"
            }
        }
    ]
}
